<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable name="viewModel" type="eu.kairat.dev.atchelper.ui.init.InitViewModel"/>
</data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.init.InitFragment">

    <TextView
        android:id="@+id/label_airframe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/airframe_label"
        android:textSize="12sp"
        android:paddingStart="8sp"
        android:paddingEnd="0sp"
        android:paddingTop="8sp"
    />

    <Spinner
        android:id="@+id/airframe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_airframe"
        android:textSize="20sp"
    />

    <TextView
        android:id="@+id/label_callsign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/airframe"
        android:text="@string/callsign_label"
        android:textSize="12sp"
        android:paddingStart="8sp"
        android:paddingEnd="0sp"
        android:paddingTop="8sp"
    />

    <EditText
        android:id="@+id/callsign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{viewModel.callsign}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_callsign"
        android:inputType="text"
    />
